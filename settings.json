{
  "editor.fontFamily": "Dank Mono, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "constant.character.format.placeholder",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "emphasis",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "strong",
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "entity.other.attribute-name.html",
          "entity.other.attribute-name.tag.jade",
          "entity.other.attribute-name.tag.pug"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "markup.underline",
        "settings": {
          "fontStyle": "underline"
        }
      },
      {
        "scope": "markup.bold",
        "settings": {
          "fontStyle": "bold",
        }
      },
      {
        "scope": "markup.heading",
        "settings": {
          "fontStyle": "bold",
        }
      },
      {
        "scope": "markup.italic",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "storage",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword.control",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword.operator.expression.delete",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "name": "this.self",
        "scope": "variable.language",
        "settings": {
          "fontStyle": "italic"
        }
      },
    ]
  },
  "editor.fontSize": 13.5,
  "editor.fontWeight": "500",
  "editor.lineHeight": 22,
  "files.autoSave": "onWindowChange",
  "workbench.tree.expandMode": "doubleClick",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.inlineSuggest.edits.allowCodeShifting": "horizontal"
}